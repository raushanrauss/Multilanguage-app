{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/app/i18n.js",
    "src/app/i18n.js",
    "src/app/i18n.js",
    "src/custom-hook/useLanguage.js"
  ]
}
